<ThingDefs>

	<ThingDef ParentName="HatMakeableBase">
		<defName>POW_Apparel_Shemagh</defName>
		<label>shemagh</label>
		<description>A large cloth wrapped around the head which can cover the face when needed. Helps insulate the wearer against both hot and cold weather.</description>
		<graphicData>
			<texPath>Cupro/Item/Equipment/Shemagh/Shemagh_Icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>20</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<statBases>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.1</Mass>
			<ArmorRating_Blunt>0.01</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.01</ArmorRating_Sharp>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<Insulation_Cold>-4</Insulation_Cold>
			<Insulation_Heat>6</Insulation_Heat>
		</statBases>
		<techLevel>Neolithic</techLevel>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<worngraphicPath>Cupro/Item/Equipment/Shemagh/Shemagh</worngraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.9,0.54,0.15,1)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>RGBA(0.9,0.6,0.18,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.9,0.42,0.23,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>


