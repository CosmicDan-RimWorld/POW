	<ThingDef ParentName="ResourceBase">
		<defName>POW_Glowstone</defName>
		<label>glowstone</label>
		<description>While the safety of these glowing rocks is questionable, they do provide a good amount of light, especially when constructed with reflective silver.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Glowstone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<MarketValue>100</MarketValue>
			<SellPriceFactor>0.25</SellPriceFactor>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<Comps>
			<li Class="CompProperties_Glower">
				<glowRadius>5</glowRadius>
				<glowColor>(113,187,252,0)</glowColor>
			</li>
		</Comps>
		<tradeability>Sellable</tradeability>
		<tradeTags>
			<li>Exotic</li>
		</tradeTags>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>POW_Coldstone</defName>
