<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>  

	<ThingDef ParentName="ResourceBase">
		<defName>POW_Charcoal</defName>
		<label>charcoal</label>
		<description>A chunk of wood that has been charred until only carbon remains. Used as cooking fuel.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Charcoal</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<resourceReadoutPriority>First</resourceReadoutPriority>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<MarketValue>3</MarketValue>
			<WorkToMake>1200</WorkToMake>
		</statBases>
		<stackLimit>75</stackLimit>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="ResourceVerbBase">
		<defName>POW_Yakisugi</defName>
