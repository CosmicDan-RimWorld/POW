<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="FurnitureBase" ParentName="BuildingBase" Abstract="True">
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<DesignationCategory>Furniture</DesignationCategory>
		<minifiedDef>MinifiedFurniture</minifiedDef>
	</ThingDef>

	<ThingDef Name="BedBase" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpactGround</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>4</Beauty>
			<WorkToMake>800</WorkToMake>
			<BedRestEffectiveness>0.8</BedRestEffectiveness>
			<Comfort>0.6</Comfort>
			<ImmunityGainSpeedFactor>1</ImmunityGainSpeedFactor>
		</statBases>
		<Size>(1,2)</Size>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<costList>
			<WoodLog>15</WoodLog>
		</costList>
		<building>
			<Bed_ShowSleeperBody>True</Bed_ShowSleeperBody>
			<Bed_HealTickInterval>2100</Bed_HealTickInterval>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>VitalsMonitor</li>
				</linkableFacilities>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<fillPercent>0.2</fillPercent>
		<PathCost>50</PathCost>
		<StaticSunShadowHeight>0.1</StaticSunShadowHeight>
		<CastEdgeShadows>True</CastEdgeShadows>
		<Passability>PassThroughOnly</Passability>
		<DrawGUIOverlay>True</DrawGUIOverlay>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<DesignationCategory>Furniture</DesignationCategory>
		<minifiedDef>MinifiedFurniture</minifiedDef>
	</ThingDef>


	<ThingDef Name="ModifiedLampBase" ParentName="BuildingBase" Abstract="True">
		<thingClass>Building</thingClass>
		<category>Building</category>
		<minifiedDef>MinifiedFurniture</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<selectable>true</selectable>
		<fillPercent>0</fillPercent>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<designationCategory>Furniture</designationCategory>
		<rotatable>false</rotatable>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
	</ThingDef>


	<!-- ========================== Inheritors ============================== -->


	<ThingDef ParentName="BedBase">
		<defName>POW_HideBed</defName>
		<Label>bed</Label>
		<Description>A simple bed for sleeping in. Not very comfortable, however.</Description>
		<ThingClass>Building_Bed</ThingClass>
		<graphicData>
			<texPath>Cupro/Object/Furniture/Bed/HideBed</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1,2)</drawSize>
		</graphicData>
	</ThingDef>


	<ThingDef ParentName="ModifiedLampBase" >
		<defName>POW_GlowstonePylon</defName>
		<label>pylon</label>
		<description>A simple structure for lighting paths. For some reason, it never feels like enough have been built.</description>
		<graphicData>
			<texPath>Cupro/Object/Furniture/Pylon</texPath>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<pathCost>10</pathCost>
		<statBases>
			<Beauty>8</Beauty>
			<WorkToMake>120</WorkToMake>
			<Flammability>0.1</Flammability>
		</statBases>
		<costList>
			<Silver>50</Silver>
			<POW_Glowstone>1</POW_Glowstone>
		</costList>
		<Comps>
			<li Class="CompProperties_Glower">
				<glowRadius>8</glowRadius>
				<glowColor>(165,177,192,0)</glowColor>
			</li>
		</Comps>
	</ThingDef>

	<ThingDef ParentName="ModifiedLampBase" >
		<defName>POW_GlowstoneLamp</defName>
		<label>glowstone lamp</label>
		<description>A lamp supporting two large glowstones.</description>
		<graphicData>
			<texPath>Cupro/Object/Furniture/Lamp/GlowstoneLamp</texPath>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1,3)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>60</pathCost>
		<stuffCategories>
			<li>Woody</li>
			<li>Metallic</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<costList>
			<Silver>75</Silver>
			<POW_Glowstone>4</POW_Glowstone>
		</costList>
		<statBases>
			<Beauty>25</Beauty>
			<WorkToMake>200</WorkToMake>
			<Flammability>0.1</Flammability>
		</statBases>
		<Comps>
			<li Class="CompProperties_Glower">
				<glowRadius>10</glowRadius>
				<glowColor>(165,177,192,0)</glowColor>
			</li>
		</Comps>
	</ThingDef>


</ThingDefs>