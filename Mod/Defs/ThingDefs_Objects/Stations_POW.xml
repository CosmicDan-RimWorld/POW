<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef ParentName="BuildingBase">
		<DefName>POW_Grill</DefName>
		<label>grill</label>
		<ThingClass>Building_WorkTable</ThingClass>
		<Description>A small grill used to cook food. Requires fuel to cook.</Description>
		<graphicData>
			<texPath>Cupro/Object/Station/Grill/Grill</texPath>
			<shaderType>CutoutComplex</shaderType>
			<graphicClass>Graphic_Multi</graphicClass>
		</graphicData>
		<stuffCategories>
			<li>Metallic</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<minifiedDef>MinifiedFurniture</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToMake>1200</WorkToMake>
			<MaxHitPoints>120</MaxHitPoints>
			<Beauty>1</Beauty>
			<Flammability>0</Flammability>
		</statBases>
		<Size>(1,1)</Size>
		<DesignationCategory>Production</DesignationCategory>
		<Passability>PassThroughOnly</Passability>
		<pathCost>60</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
			<li>POW_GrillMealMeat</li>
			<li>POW_GrillMealMeatDouble</li>
			<li>POW_GrillMealVeg</li>
			<li>POW_GrillMealVegDouble</li>
			<li>POW_GrillMealFine</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<tickerType>Normal</tickerType>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>40.0</fuelConsumptionRate>
				<fuelCapacity>25.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>POW_Charcoal</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
			<li Class="Powerless.CompProperties_Smoker">
				<smokeStyle>Single</smokeStyle>
				<frequencyMin>240</frequencyMin>
				<frequencyMax>640</frequencyMax>
				<produceSmokeOnlyWhenUsed>true</produceSmokeOnlyWhenUsed>
				<size>0.25</size>
			</li>
		</comps>
		<building>
			<isMealSource>true</isMealSource>
			<heatPerTickWhileWorking>0.35</heatPerTickWhileWorking>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<DefName>POW_Forge</DefName>
		<label>forge</label>
		<ThingClass>Building_WorkTable</ThingClass>
		<Description>An ancient structure used for heating up metal and working it into useful tools.</Description>
		<graphicData>
			<texPath>Cupro/Object/Station/Forge/Forge</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<fillPercent>0.25</fillPercent>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<POW_Charcoal>25</POW_Charcoal>
			<Steel>30</Steel>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<UseHitPoints>true</UseHitPoints>
		<destroyable>true</destroyable>
		<rotatable>true</rotatable>
		<statBases>
			<MaxHitPoints>2000</MaxHitPoints>
			<WorkToMake>2000</WorkToMake>
			<Flammability>0</Flammability>
			<Cleanliness>-5</Cleanliness>
		</statBases>
		<Size>(2,1)</Size>
		<DesignationCategory>Production</DesignationCategory>
		<Passability>PassThroughOnly</Passability>
		<pathCost>60</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<tickerType>Normal</tickerType>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>POW_Bellows</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>20.0</fuelConsumptionRate>
				<fuelCapacity>40.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>POW_Charcoal</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
			<li Class="Powerless.CompProperties_Smoker">
				<smokeStyle>Single</smokeStyle>
				<frequencyMin>1200</frequencyMin>
				<frequencyMax>1600</frequencyMax>
				<produceSmokeOnlyWhenUsed>true</produceSmokeOnlyWhenUsed>
				<size>0.5</size>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<heatPerTickWhileWorking>1.0</heatPerTickWhileWorking>
		</building>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>POW_Forge</li>
		</researchPrerequisites>
	</ThingDef>


	<ThingDef ParentName="BuildingBase">
		<DefName>POW_CharcoalPit</DefName>
		<label>charcoal pit</label>
		<ThingClass>Powerless.Building_CharcoalPit</ThingClass>
		<Description>A mound of burning wood covered with dirt to block oxygen.</Description>
		<graphicData>
			<texPath>Cupro/Object/Utility/DirtMound</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
			<color>(133,97,67)</color>
		</graphicData>
		<blockLight>false</blockLight>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>false</rotatable>
		<useHitPoints>false</useHitPoints>
		<fillPercent>0</fillPercent>
		<statBases>
			<WorkToMake>500</WorkToMake>
			<Flammability>0</Flammability>
		</statBases>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<Size>(1,1)</Size>
		<DesignationCategory>Production</DesignationCategory>
		<Passability>PassThroughOnly</Passability>
		<pathCost>60</pathCost>
		<surfaceType>Item</surfaceType>
		<tickerType>Rare</tickerType>
		<building>
			<soundAmbient>FireBurning</soundAmbient>
			<isEdifice>false</isEdifice>
		</building>
		<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<DefName>POW_Smoker</DefName>
		<label>smoker</label>
		<ThingClass>Building_WorkTable</ThingClass>
		<Description>A large stone smoker built for cooking and preserving a large amount of meat. Takes a long time to cook.</Description>
		<graphicData>
			<texPath>Cupro/Object/Station/Smoker/Smoker</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<uiIconPath>Cupro/Object/Station/Smoker/Smoker_MenuIcon</uiIconPath>
		<fillPercent>0.9</fillPercent>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<UseHitPoints>true</UseHitPoints>
		<rotatable>true</rotatable>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToMake>2000</WorkToMake>
			<Flammability>0</Flammability>
			<Beauty>10</Beauty>
			<Cleanliness>-5</Cleanliness>
		</statBases>
		<Size>(1,1)</Size>
		<DesignationCategory>Production</DesignationCategory>
		<Passability>PassThroughOnly</Passability>
		<pathCost>80</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
			<li>POW_SmokePreserveMeatLarge</li>
			<li>POW_SmokePreserveMeatSmall</li>
			<li>POW_SmokePreserveMeatSingle</li>
		</recipes>
		<tickerType>Normal</tickerType>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>60.0</fuelConsumptionRate>
				<fuelCapacity>40.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>POW_Charcoal</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
			<li Class="Powerless.CompProperties_Smoker">
				<smokeStyle>Single</smokeStyle>
				<frequencyMin>120</frequencyMin>
				<frequencyMax>360</frequencyMax>
				<offset>(0.5,0,1)</offset>
				<produceSmokeOnlyWhenUsed>true</produceSmokeOnlyWhenUsed>
				<size>0.75</size>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<isMealSource>true</isMealSource>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
	</ThingDef>

</ThingDefs>