<?xml version="1.0" encoding="utf-8" ?>
<Plants>
	<ThingDef Name="POW_PlantDefInsertion" ParentName="PlantBase">
		<defName>POW_PlantTurnip</defName>
		<label>turnip plant</label>
		<description>A root vegetable with edible leaves. Grows quickly and is able to survive a cold snap.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Cupro/Object/Plant/PlantTurnip</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible>
			<nutrition>0.04</nutrition>
		</ingestible>
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>POW_TurnipItemSpawner</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<topWindExposure>0.2</topWindExposure>
			<growDays>3</growDays>
			<lifespanFraction>20</lifespanFraction>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<visualSizeRange>
				<min>0.3</min>
				<max>1</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

	<ThingDef ParentName="POW_PlantDefInsertion">
		<defName>POW_PlantCabbage</defName>
		<label>cabbage plant</label>
		<description>A plant with a large leafy bulb. Requires good soil, but is able to survive winter. Can be eaten raw but isn't very nutritious.</description>
		<graphicData>
			<texPath>Cupro/Object/Plant/PlantCabbage</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<ingestible>
			<nutrition>0.02</nutrition>
		</ingestible>
		<plant>
			<harvestedThingDef>POW_Cabbage</harvestedThingDef>
			<harvestYield>12</harvestYield>
			<topWindExposure>0.1</topWindExposure>
			<growDays>5</growDays>
			<growMinGlow>0.4</growMinGlow>
			<growOptimalGlow>0.8</growOptimalGlow>
			<fertilityMin>0.85</fertilityMin>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<wildCommonalityMaxFraction>0.005</wildCommonalityMaxFraction>
			<wildBiomes>
				<TropicalRainforest>0.005</TropicalRainforest>
				<TemperateForest>0.005</TemperateForest>
				<AridShrubland>0.0025</AridShrubland>
				<BorealForest>0.0075</BorealForest>
				<Tundra>0.0125</Tundra>
			</wildBiomes>
			<wildClusterSizeRange>
				<min>2</min>
				<max>5</max>
			</wildClusterSizeRange>
			<wildClusterRadius>6</wildClusterRadius>
		</plant>
	</ThingDef>


</Plants>