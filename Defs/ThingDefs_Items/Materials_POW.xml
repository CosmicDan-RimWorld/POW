<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>  

	<ThingDef ParentName="ResourceBase">
		<defName>POW_Charcoal</defName>
		<label>charcoal</label>
		<description>A chunk of wood that has been charred until only carbon remains. Used as fuel for grills and smokers.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Charcoal</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<onGroundRandomRotateAngle>45</onGroundRandomRotateAngle>
		</graphicData>
		<resourceReadoutPriority>First</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>0.6</MarketValue>
			<Mass>0.1</Mass>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>5</DeteriorationRate>
			<WorkToMake>1200</WorkToMake>
		</statBases>
		<stackLimit>75</stackLimit>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>POW_Glowstone</defName>
		<label>glowstone</label>
		<description>While the safety of these glowing rocks is questionable, they do provide a good amount of light without needing power.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Glowstone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<Beauty>2</Beauty>
			<MarketValue>150</MarketValue>
			<Mass>0.8</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<Comps>
			<li Class="CompProperties_Glower">
				<glowRadius>5</glowRadius>
				<glowColor>(150,185,205,0)</glowColor>
			</li>
		</Comps>
		<tradeability>Sellable</tradeability>
		<tradeTags>
			<li>Exotic</li>
		</tradeTags>
	</ThingDef>
	
	<ThingDef ParentName="ResourceBase">
		<defName>POW_VinegarJuice</defName>
		<label>vinegar juice</label>
		<description>Concentrated fruit juice. This substance needs to ferment in a fermenting barrel before it becomes usable vinegar.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Juice_Vinegar</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<stackLimit>25</stackLimit>
		<statBases>
			<MarketValue>2.5</MarketValue>
			<DeteriorationRate>1</DeteriorationRate>
			<Mass>0.8</Mass>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>5</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>POW_Vinegar</defName>
		<label>vinegar</label>
		<description>A mildly acidic liquid used for pickling vegetables.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Vinegar</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<MarketValue>12</MarketValue>
			<Mass>0.5</Mass>
			<SellPriceFactor>0.75</SellPriceFactor>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<tradeTags>
			<li>Exotic</li>
		</tradeTags>
	</ThingDef>

</ThingDefs>