			<MarketValue>3</MarketValue>
			<Mass>0.1</Mass>
			<WorkToMake>1200</WorkToMake>
		</statBases>
		<stackLimit>75</stackLimit>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

